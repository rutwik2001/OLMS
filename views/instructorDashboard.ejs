<div class="container">
  <div class="row">
    <% if (sections && sections.length > 0) { %>
      <% sections.forEach(section => { %>
        <div class="col-md-4 my-3">
          <a href="/section/<%= section.courseId %>/<%= section.sectionId %>" class="text-decoration-none" style="color: inherit;">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= section.courseId %> - Section <%= section.sectionId %></h5>
                <%if(section.completed == false){%>
                  <p class="card-text"><strong>Classroom:</strong> <%= section.classroom %></p>
                <p class="card-text"><strong>Term:</strong> <%= section.term %> <%= section.year %></p>
                <p class="card-text"><strong>Start Time:</strong> <%= section.startTime %></p>
                <p class="card-text"><strong>End Time:</strong> <%= section.endTime %></p>
                <p class="card-text"><strong>Total Students:</strong> <%= section.students.length %></p>
                  
                <%} else{%>
                    <p><strong>Section Completed</strong></p>
                  
                    <%}%>
                
               
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">You are not teaching any sections currently.</p>
    <% } %>
  </div>
</div>

